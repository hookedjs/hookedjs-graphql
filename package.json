{
  "name": "hookedjs",
  "version": "0.0.0",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "core/*",
    "modules/*"
  ],
  "scripts": {
    "build": "yarn codegen && cd core/react && yarn build",
    "codegen": "yarn workspaces run codegen",
    "clean": "rimraf core/*/**/{__generated__,build,node_modules,schema.graphql} node_modules .eslintcache",
    "dev": "npm-run-all -l codegen -p dev:*",
    "dev:db": "./scripts/docker-db.sh",
    "dev:api": "cd core/api && yarn dev",
    "dev:react": "cd core/react && yarn dev",
    "start": "yarn codegen && cd core/api && yarn prisma:apply && yarn start",
    "validate": "printf \"\\n> @all\\n\" && yarn lint && yarn workspaces run tsc",
    "lint": "eslint --cache --ext .ts '{core,modules}/*/{src,common,api,react,prisma}/**/*.ts' --fix",
    "test": "yarn workspaces run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn validate"
    }
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "ts-node": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^6.6.3",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "husky": "^4.3.0",
    "rimraf": "*",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "4.0.2"
  },
  "engines": {
    "node": ">=12 <15"
  }
}
